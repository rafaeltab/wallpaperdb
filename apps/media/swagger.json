{
  "openapi": "3.0.3",
  "info": {
    "title": "WallpaperDB Media API",
    "version": "1.0.0",
    "description": "Wallpaper retrieval and serving service. Retrieves wallpapers from object storage with optional resizing and format conversion."
  },
  "components": {
    "securitySchemes": {
      "userId": {
        "type": "apiKey",
        "in": "header",
        "name": "x-user-id",
        "description": "User ID for authentication"
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["healthy", "unhealthy", "degraded", "error", "shutting_down"],
            "description": "Overall health status of the service"
          },
          "checks": {
            "type": "object",
            "additionalProperties": {
              "type": "boolean"
            },
            "description": "Individual component health checks"
          },
          "timestamp": {
            "type": "string",
            "description": "ISO 8601 timestamp of the health check"
          },
          "error": {
            "type": "string",
            "description": "Error message if status is 'error'"
          },
          "totalDurationMs": {
            "type": "number",
            "description": "Duration of all checks in milliseconds"
          }
        },
        "required": ["status", "checks", "timestamp"],
        "additionalProperties": false
      },
      "ReadyResponse": {
        "type": "object",
        "properties": {
          "ready": {
            "type": "boolean",
            "description": "Whether the service is ready to accept traffic"
          },
          "timestamp": {
            "type": "string",
            "description": "ISO 8601 timestamp of the readiness check"
          },
          "reason": {
            "type": "string",
            "description": "Reason if service is not ready"
          }
        },
        "required": ["ready", "timestamp"],
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "URI identifying the problem type"
          },
          "title": {
            "type": "string",
            "description": "Short, human-readable summary of the problem"
          },
          "status": {
            "type": "integer",
            "minimum": 100,
            "maximum": 599,
            "description": "HTTP status code"
          },
          "detail": {
            "type": "string",
            "description": "Human-readable explanation specific to this occurrence of the problem"
          },
          "instance": {
            "type": "string",
            "description": "URI reference identifying the specific occurrence"
          }
        },
        "additionalProperties": true,
        "description": "RFC 7807 Problem Details response"
      },
      "ValidationProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "URI identifying the problem type"
          },
          "title": {
            "type": "string",
            "description": "Short, human-readable summary of the problem"
          },
          "status": {
            "type": "integer",
            "minimum": 100,
            "maximum": 599,
            "description": "HTTP status code"
          },
          "detail": {
            "type": "string",
            "description": "Human-readable explanation specific to this occurrence of the problem"
          },
          "instance": {
            "type": "string",
            "description": "URI reference identifying the specific occurrence"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": {
                  "type": "string",
                  "description": "Field that failed validation"
                },
                "message": {
                  "type": "string",
                  "description": "Validation error message"
                },
                "code": {
                  "type": "string",
                  "description": "Error code for programmatic handling"
                }
              },
              "required": ["field", "message"],
              "additionalProperties": false
            },
            "description": "Array of validation errors"
          }
        },
        "additionalProperties": true,
        "description": "RFC 7807 Problem Details response"
      }
    }
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "tags": ["Health"],
        "description": "Returns health status of the media service and its dependencies. Checks database, object storage, and message queue connectivity.",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          },
          "503": {
            "description": "Service is unhealthy or degraded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/ready": {
      "get": {
        "summary": "Readiness check",
        "tags": ["Health"],
        "description": "Returns 200 if service is ready to handle requests, 503 otherwise. Use for Kubernetes readiness probes.",
        "responses": {
          "200": {
            "description": "Service is ready to accept traffic",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReadyResponse"
                }
              }
            }
          },
          "503": {
            "description": "Service is not ready (shutting down or connections not initialized)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReadyResponse"
                }
              }
            }
          }
        }
      }
    },
    "/wallpapers/{id}": {
      "get": {
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:3003",
      "description": "Local development server"
    }
  ]
}
