{
  "name": "@wallpaperdb/gateway",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "gen:swagger": "tsx src/gen_swagger.ts",
    "build": "node --experimental-strip-types esbuild.config.ts",
    "build:docker": "docker build -t wallpaperdb-gateway:latest -f Dockerfile ../..",
    "start": "node dist/index.mjs",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check-types": "tsc --noEmit",
    "check": "biome check --write .",
    "test": "vitest run",
    "test:integration": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.0",
    "@opensearch-project/opensearch": "^2.12.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.52.1",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.56.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.56.0",
    "@opentelemetry/sdk-metrics": "^1.29.0",
    "@opentelemetry/sdk-node": "^0.56.0",
    "@wallpaperdb/core": "workspace:*",
    "@wallpaperdb/events": "workspace:*",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.1.0",
    "graphql": "^16.9.0",
    "mercurius": "^16.4.0",
    "nats": "^2.29.1",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "ulid": "^2.3.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^22.10.2",
    "@wallpaperdb/test-utils": "workspace:*",
    "@wallpaperdb/testcontainers": "workspace:*",
    "esbuild": "^0.25.12",
    "pino-pretty": "^13.0.0",
    "testcontainers": "^11.9.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
