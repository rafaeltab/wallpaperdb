{
  "name": "@wallpaperdb/events",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Event schemas and utilities for WallpaperDB services",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./schemas": {
      "import": "./src/schemas/index.ts",
      "types": "./src/schemas/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "@biomejs/biome": "^2.3.4",
    "vitest": "^2.1.8"
  }
}
