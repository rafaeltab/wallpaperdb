{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "start": {
            "cache": false,
            "persistent": true
        },
        "stop": {
            "cache": false
        },
        "reset": {
            "cache": false
        },
        "logs": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "build/**"
            ]
        },
        "build:docker": {
            "dependsOn": [
                "build"
            ],
            "cache": false,
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^build"
            ]
        },
        "lint:fix": {
            "dependsOn": [
                "^build"
            ]
        },
        "format": {
            "cache": false
        },
        "format:check": {
            "cache": false
        },
        "check": {
            "cache": false
        },
        "test": {
            "cache": true,
            "inputs": [
                "src/**",
                "test/**",
                "vitest.*.ts",
                "package.json",
                "package-lock.json"
            ],
            "dependsOn": [
                "^build",
                "^build:docker"
            ]
        },
        "test:unit": {
            "cache": true,
            "inputs": [
                "src/**",
                "test/**",
                "vitest.*.ts",
                "package.json"
            ],
            "dependsOn": [
                "^build"
            ]
        },
        "test:integration": {
            "cache": true,
            "inputs": [
                "src/**",
                "test/**",
                "vitest.*.ts",
                "package.json"
            ],
            "dependsOn": [
                "^build"
            ]
        },
        "test:e2e": {
            "cache": true,
            "inputs": [
                "src/**",
                "test/**",
                "vitest.*.ts",
                "package.json"
            ],
            "dependsOn": [
                "^build",
                "^build:docker"
            ]
        },
        "check-types": {
            "cache": true,
            "inputs": [
                "src/**",
                "package.json",
                "package-lock.json",
                "tsconfig.json"
            ]
        }
    }
}
