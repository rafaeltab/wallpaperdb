{
  "name": "@wallpaperdb/events",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Event schemas and utilities for WallpaperDB services",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./schemas": {
      "import": "./src/schemas/index.ts",
      "types": "./src/schemas/index.ts"
    },
    "./publisher": {
      "import": "./src/publisher/index.ts",
      "types": "./src/publisher/index.ts"
    },
    "./consumer": {
      "import": "./src/consumer/index.ts",
      "types": "./src/consumer/index.ts"
    }
  },
  "scripts": {
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "vitest run",
    "test:unit": "vitest run --coverage",
    "test:watch": "vitest",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.24.1",
    "nats": "^2.29.1",
    "@opentelemetry/api": "^1.9.0",
    "ulid": "^2.3.0"
  },
  "peerDependencies": {
    "@wallpaperdb/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "@biomejs/biome": "^2.3.4",
    "vitest": "^2.1.8"
  }
}
